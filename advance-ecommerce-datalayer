<script>
    window.dataLayer = window.dataLayer || [];

    // Page View
    window.dataLayer.push({
        'event': 'pageview',
        'pageType': 'home',
        'pageName': 'Home Page',
        'siteSection': 'Main Section',
        'referrer': document.referrer
    });

    // Product Impressions
    window.dataLayer.push({
        'event': 'productImpression',
        'currencyCode': 'USD',
        'impressions': [
            {
                'name': 'Product 1',
                'id': 'P001',
                'price': 29.99,
                'brand': 'Your Brand',
